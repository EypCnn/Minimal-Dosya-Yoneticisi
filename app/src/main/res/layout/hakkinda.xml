<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewMrDoomy"
            android:layout_width="@dimen/image_widht"
            android:layout_height="@dimen/image_height"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:src="@drawable/img_mrdoomy" />

        <ImageView
            android:id="@+id/imageViewStudio"
            android:layout_width="@dimen/image_widht"
            android:layout_height="@dimen/image_height"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:src="@drawable/img_studio" />

        <TextView
            android:id="@+id/textViewAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageViewMrDoomy"
            android:layout_alignLeft="@+id/imageViewMrDoomy"
            android:layout_alignRight="@+id/imageViewMrDoomy"
            android:layout_alignStart="@+id/imageViewMrDoomy"
            android:layout_below="@+id/imageViewMrDoomy"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/developer"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/greyMaterialDark" />

        <TextView
            android:id="@+id/textViewCopyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewAbout"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="@string/copyright"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/greyMaterialDark" />

        <ImageView
            android:id="@+id/imageViewGitHub"
            android:layout_width="@dimen/size_github"
            android:layout_height="@dimen/size_github"
            android:layout_below="@+id/textViewCopyright"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:src="@drawable/img_github" />

    </RelativeLayout>
</LinearLayout>